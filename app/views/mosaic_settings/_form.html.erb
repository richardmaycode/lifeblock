<%= form_with(model: mosaic_setting) do |f| %>

  <%= f.select :color_scheme_id, options_for_select(ColorScheme.all.map { |cs| [cs.name, cs.id]}) %>
  <br>
  <%= f.check_box :show_numbers %>
  <%= f.label :show_numbers, "Show Day Number" %>
  <br>
  <%= f.check_box :show_labels %>
  <%= f.label :show_labels, "Show Mood Labels" %>
  <br>
  <%= f.check_box :show_upcoming_dates %>
  <%= f.label :show_upcoming_dates, "Show Upcoming Dates" %>
  <br>
  <%= f.check_box :show_skipped_days %>
  <%= f.label :show_skipped_days, "Show Skipped Days" %>
  <br>
  <%= f.submit "Submit", disable_with: 'Submiting...' %>
<% end %>