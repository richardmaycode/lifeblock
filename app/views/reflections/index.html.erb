<h1>Reflections#index</h1>
<% @reflections.load %>
<p>
  Days Logged: <%= @reflections.size %> (<%= number_to_percentage((@reflections.size.to_f / Time.days_in_month(@date.month, @date) * 100), precision: 0) %>)
</p>
<div class="mood-container">
  <% (@date.beginning_of_month..@date.end_of_month).each do |date| %>
    <%= content_tag :div, nil, class: Reflection.display_classes_for(date, @reflections) %>
  <% end %>
</div>